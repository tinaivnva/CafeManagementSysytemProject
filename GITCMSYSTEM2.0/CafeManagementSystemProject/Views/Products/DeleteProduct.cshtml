@{
    <h2> Delete Product</h2>

    <form method="post" asp-controller="Product" asp-action="DeleteProductConfirm" asp-route-id="@Model.Id">
        <p>
            <span>ProductId:</span>
            <input type="number" name="roduct_id" value="@Model.ProductId" disabled />
        </p>
        <p>
            <span>ProductName:</span>
            <input type="text" name="productName" value="@Model.ProductName" disabled />
        </p>
        <p>
            <span>ProductType:</span>
            <input type="text" name="productType" value="@Model.ProductType" disabled />
        </p>
        <p>
            <span>Price:</span>
            <input type="number" name="price" value="@Model.Price" disabled />
        </p>
        <p>
            <span>IsItCold:</span>
            <input type="checkbox" name="is_cold" value="@Model.IsItCold" disabled />
        </p>
        <p>
            <span>IsItVegan:</span>
            <input type="checkbox" name="is_vegan" value="@Model.IsItVegan" disabled />
        </p>

        <button type="submit">Delete Product</button>
        <button>
            < asp-controller="Product" asp-action="Index">Cancel</>
        </button>
    </form>
}
